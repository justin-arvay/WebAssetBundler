<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>@ViewBag.Title</title>

    @Bundler.StyleSheets.Render("StyleSheets")

</head>
<body>
    <div id="wrap-all">
        <div id="header">
            <div class="top">
                <div class="wrapper">
                    <a href="@Url.RouteUrl("Home")">
                        <img alt="Logo" class="logo" src="/Images/Logo.png" width="170" height="80"/>
                    </a>

                    <div class="right">
                        <div class="button">
                            <div class="g-plusone" data-size="medium"></div>
                        </div>

                        <div class="button">
                            <div class="fb-like" data-send="false" data-layout="button_count" data-width="50" data-show-faces="true"></div>
                        </div>

                        <div class="button">
                            <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
                        </div>
                    </div>

                    
                    <div class="download">
                        <a href="@Url.RouteUrl("Download")">
                            <img src="" /> 
                            Download
                        </a>
                    </div>
                </div>
            </div>
            <div class="bottom">

                <div class="wrapper">
                    @Html.RouteLink("Getting Started", "Documentation", new { path = "introduction" })
                    @Html.RouteLink("Benefits", "Documentation", new { path = "introduction" })
                    @Html.RouteLink("Support", "Documentation", new { path = "introduction" })
                    @Html.RouteLink("Documentation", "Documentation", new { path = "introduction" })                    
                    @Html.RouteLink("Download", "Documentation", new { path = "introduction" })
                    
                </div>
            </div>
        </div>

        <div id="main">
            <div class="wrapper">
                @RenderBody()
            </div>            
        </div>

        <div class="push"></div>
    </div>

    <div id="footer">
        <div class="wrapper">
            <div class="content">
                <span>© 2013 Justin Arvay</span>
                <a href="https://github.com/justin-arvay/WebAssetBundler">Git Hub</a>
                <a href="https://blueleaf.atlassian.net">Report a Bug</a>
        
                <div class="osi">
                    <a href="http://opensource.org/">
                        <img alt="This software fully supports the Open Source Initiative" src="/Images/osi-logo.png" />        
                        <span><strong>Open</strong> Source Initiative</span>
                    </a>
                </div>
            </div>
        </div>        
    </div>


    @Bundler.Scripts.Render("Scripts")
    @Bundler.Scripts.Include("https://apis.google.com/js/plusone.js")
    @Bundler.Scripts.Include("http://platform.twitter.com/widgets.js")

    <script type="text/javascript">
        $(document).ready(function () {
            Rainbow.color();
        });
    </script>

    <div id="fb-root"></div>
<script>    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    } (document, 'script', 'facebook-jssdk'));</script>
</body>
</html>
